    {
      "_id": "q6O8Vfdef62lXAUh",
      "name": "Substantial Slime",
      "type": "feat",
      "sort": 162500,
      "flags": {},
      "img": "modules/ddd-beginner-baubles/actors/icons/substantial-slime.png",
      "effects": [],
      "folder": null,
      "_stats": {
        "coreVersion": "12.331",
        "systemId": null,
        "systemVersion": null,
        "createdTime": null,
        "modifiedTime": null,
